
<%= form_with model: @ticket, method: :put , class: "form-inline" do |form| %>
	<div class="form-group">
		<%= form.label :title  %><br>
		<%= form.text_field :title %>
		<% @ticket.errors.full_messages_for(:title).each do |message| %>
     		 <div><%= message %></div>
    	<% end %>
	</div>
	<div class="form-group">
		<%= form.label :description %><br>
		<%= form.text_area :description %>
		<% @ticket.errors.full_messages_for(:description).each do |message| %>
     		 <div><%= message %></div>
    	<% end %>
	</div>
	<div class="form-group">
		<%= form.label :status %>
		<%= form.select :status , ['public','private','archive'] , selected: 'public'%>
	</div>
	<div class="form-group">
		<%= form.label :category_id %>
		<%= form.select :category_id, options_for_select(Category.all.map{|c| [c.name, c.id]}) %>
	</div>
	
	<div>
		<%= form.submit  %>
	</div>
<% end %>



