
<html>
<%#= image_tag @user.avatar.url %>
<body>
	<div class="container">
		
		<h2>Tickets list</h2>
		<%=  form_with  url: '/tickets', method: :get  do |form| %>
		<%#=  form_with  model: @search  do |form| %>
			<%= form.label :title,"serach"%>
			<%= form.text_field :title %>
			<%= form.submit "SUBMIT", class: "submit_button" %>
    	<% end %>
    	<br>
    	<br>
   

   <% if @tickets.present? %>
		<table class="table table-bordered">
			<h3>Public</h3>

			<thead>
				<tr>
					<th>Title</th>
					<th>Description</th>
					<th>Category name</th>
					<th>Status</th>	
				</tr>
			</thead>

			<tbody>
				   <% @tickets.pub.each do |ticket|%>
				   <tr>
					<td><%= link_to ticket.title , ticket %></td>
					<td><%= ticket.description %></td>
					<td><%= ticket.category.name %></td>
					<td><%= ticket.status %></td>
				   </tr>		
				   <% end %>

			</tbody>	
		</table>
		

		<table class="table table-bordered">
			<h3>Private</h3>
			<thead>
				<tr>
					<th>Title</th>
					<th>Description</th>
					<th>Category name</th>
					<th>Status</th>	
				</tr>
			</thead>
			<tbody>
				   <% @tickets.pri.each do |ticket|%>
				   <tr>
					<td><%= link_to ticket.title , ticket %></td>
					<td><%= ticket.description %></td>
					<td><%= ticket.category.name %></td>
					<td><%= ticket.status %></td>
				   </tr>		
				   <% end %>

			</tbody>	
		</table>
		<table class="table table-bordered">
			<h3>Archive</h3>
			<thead>
				<tr>
					<th>Title</th>
					<th>Description</th>
					<th>Category name</th>
					<th>Status</th>	
				</tr>
			</thead>
			<tbody>
				   <% @tickets.arc.each do |ticket|%>
				   <tr>
					<td><%= link_to ticket.title , ticket %></td>
					<td><%= ticket.description %></td>
					<td><%= ticket.category.name %></td>
					<td><%= ticket.status %></td>
				   </tr>		
				   <% end %>

			</tbody>	
		</table>

		<% else %>
			<h3>not found!!</h3>
		<% end %>	


		<%= link_to "create_ticket", new_ticket_path %><br>
		<%= link_to "back", root_path %>
	</div>
<%= will_paginate @tickets %>
</body>
</html>



