<html>
<%#= image_tag @user.avatar.url %>
<body>
	<div class="container">
		
		<h2>Tickets list</h2>
		<%=  form_with  url: '/tickets', method: :get  do |form| %>
		<%#=  form_with  model: @search  do |form| %>
			<%= form.label :title,"serach"%>
			<%= form.text_field :title %>
			<%= form.submit "SUBMIT", class: "submit_button" %>
    	<% end %>
    	<br>
    	<br>
   

   <% if @tickets.present? %>
		<table class="table table-bordered">
			<h3>Public</h3>

			<thead>
				<tr>
					<th>Title</th>
					<th>Description</th>
					<th>Category name</th>
					<th>Status</th>
					<th>images</th>	
				</tr>
			</thead>

			<tbody>
				   <% @tickets.pub.each do |ticket|%>
				   <tr>
					<td><%= link_to ticket.title , ticket_path(ticket.id) %></td>
					<td><%= ticket.description %></td>
					<td><%= ticket.category.name %></td>
					<td><%= ticket.status %></td>
					<td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
 						 Images
				</button></td>
				<div class="modal fade" id="exampleModal<%= ticket.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ticket images</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      	<% @tickets.each do |ticket|%>
      		<%#= ticket.images %>
        	<%= image_tag(url_for(ticket.images)) %>
		<% end %>

      </div>
     	 <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
     </div>
    </div>
  </div>

				   </tr>		
				   <% end %>

			</tbody>	
		</table>
		

		<table class="table table-bordered">
			<h3>Private</h3>
			<thead>
				<tr>
					<th>Title</th>
					<th>Description</th>
					<th>Category name</th>
					<th>Status</th>	
				</tr>
			</thead>
			<tbody>
				   <% @tickets.pri.each do |ticket|%>
				   <%# p comment_ticket_path(ticket.id) %>
				   <%# p "====================" %>
				   <tr>
					<td><%= link_to ticket.title , ticket_path(ticket.id) %></td>
					<td><%= ticket.description %></td>
					<td><%= ticket.category.name %></td>
					<td><%= ticket.status %></td>
				   </tr>		
				   <% end %>

			</tbody>	
		</table>
		<table class="table table-bordered">
			<h3>Archive</h3>
			<thead>
				<tr>
					<th>Title</th>
					<th>Description</th>
					<th>Category name</th>
					<th>Status</th>	

				</tr>
			</thead>
			<tbody>
				   <% @tickets.arc.each do |ticket|%>
				   <tr>
					<td><%= link_to ticket.title , ticket_url(ticket.id) %></td>
					<td><%= ticket.description %></td>
					<td><%= ticket.category.name %></td>
					<td><%= ticket.status %></td>
				   </tr>		
				   <% end %>

			</tbody>	
		</table>

		<% else %>
			<h3>not found!!</h3>
		<% end %>	


		<%= link_to "create_ticket", ticket_new_path %><br>
		<%= link_to "back", root_path %>
	</div>
<%= will_paginate @tickets %>

</body>
</html>



